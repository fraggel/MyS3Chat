<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    tools:context=".MediaSelection">

    <TableRow android:layout_width="match_parent">

        <RelativeLayout
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="145dp"
                android:layout_height="117dp"
                android:src="@android:drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView2"
                android:layout_centerHorizontal="true"
                android:text="Envía imagen..." />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="145dp"
                android:layout_height="117dp"
                android:src="@android:drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView3"
                android:layout_centerHorizontal="true"
                android:text="Envía vídeo..." />
        </RelativeLayout>
    </TableRow>

    <TableRow android:layout_width="match_parent">

    <RelativeLayout android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="145dp"
            android:layout_height="117dp"
            android:src="@android:drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView4"
            android:layout_centerHorizontal="true"
            android:text="Captura imagen..." />
    </RelativeLayout>

        <RelativeLayout android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="145dp"
                android:layout_height="117dp"
                android:src="@android:drawable/ic_menu_camera" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView5"
                android:layout_centerHorizontal="true"
                android:text="Captura vídeo..." />
        </RelativeLayout>
    </TableRow>
    <TableRow android:layout_width="match_parent">

    <RelativeLayout android:layout_weight="2"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="145dp"
            android:layout_height="117dp"
            android:layout_centerHorizontal="true"
            android:src="@android:drawable/ic_menu_upload"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView6"
            android:layout_centerHorizontal="true"
            android:text="Subiendo..."
            android:visibility="invisible" />
    </RelativeLayout>
    </TableRow>
</TableLayout>